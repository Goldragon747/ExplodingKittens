<Page x:Class="ExplodingKittensWPF.Pages.InstructionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExplodingKittensWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="InstructionsPage">

    <Grid>
        <Button VerticalAlignment="Top" x:Name="instructions_back" MinWidth="200" Height="50" Background="DarkRed" Foreground="White" PreviewMouseDown="instructions_back_MouseDown">Back</Button>
        <ScrollViewer Margin="0 50 0 0" CanContentScroll="True" VerticalScrollBarVisibility="Auto">
            <Image Source="/ExplodingKittensWPF;component/Assets/InstructionsScreen/instructions.png"></Image>
        </ScrollViewer>
    </Grid>
</Page>
