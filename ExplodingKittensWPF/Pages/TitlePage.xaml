            <Image x:Name="title_play" Source="/ExplodingKittensWPF;component/Assets/TitleScreen/title_play.png" Width="300" Height="150" Canvas.Left="806" Canvas.Top="210" Stretch="Fill" MouseEnter="title_play_MouseEnter" MouseLeave="title_play_MouseLeave"/>
